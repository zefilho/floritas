@model FloritasStore.Models.Company

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>    
    <input asp-for="Name" class="form-control" placeholder="Digite o Nome da Empresa." />
    <span asp-validation-for="Name" class="text-danger-validation"></span>
</div>
<div class="form-group">
    <label asp-for="CorporateName" class="control-label"></label>
    <input asp-for="CorporateName" class="form-control" placeholder="Digite a Razão Social da Empresa."/>
    <span asp-validation-for="CorporateName" class="text-danger-validation"></span>
</div>
<div class="form-group">
    <label asp-for="PhoneNumber" class="control-label"></label>
    <input asp-for="PhoneNumber" class="form-control" data-inputmask="'mask': '(99) 99999-9999'" data-mask="" inputmode="text" />
    <span asp-validation-for="PhoneNumber" class="text-danger-validation"></span>
</div>
<div class="form-group">
    <label asp-for="Cnpj" class="control-label"></label>
    <input asp-for="Cnpj" class="form-control" data-inputmask="'mask': '99.999.999/9999-99'" data-mask="" inputmode="text"  />
    <span asp-validation-for="Cnpj" class="text-danger-validation"></span>
</div>

