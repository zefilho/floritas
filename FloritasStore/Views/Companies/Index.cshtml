@model IEnumerable<FloritasStore.Models.Company>

@{

}

@section Css{
    <partial name="_CssDataTable.cshtml" />
}

<div class="container-fluid">
    <p class="ml-2">
        <a asp-action="Create" class="btn btn-success text-capitalize" role="button">Nova Empresa</a>
    </p>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Empresas Cadastradas</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table wm-table id="example2" class="table table-bordered table-hover dataTable dtr-inline collapsed nowrap" role="grid">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CorporateName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cnpj)
                            </th>                            
                            <th>
                                Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td role="row" class="even">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td role="row" class="even">
                                @Html.DisplayFor(modelItem => item.CorporateName)
                            </td>
                            <td role="row" class="even">
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td role="row" class="even">
                                @Html.DisplayFor(modelItem => item.Cnpj)
                            </td>                           

                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-folder">
                                    </i>

                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-pencil-alt">
                                    </i>

                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash">
                                    </i>

                                </a>
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ScriptsDataTable.cshtml" />
}
