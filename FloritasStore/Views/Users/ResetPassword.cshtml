@model FloritasStore.ViewModels.Users.ResetPasswordUserViewModel

<div class="container-fluid pb-2">
    <div class="col-md-8">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Resetar senha de Usuário</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="ResetPassword" role="form">

                <div class="card-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-default float-right" role="button">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}   
}